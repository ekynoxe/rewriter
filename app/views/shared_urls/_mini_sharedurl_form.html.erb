<%= form_for @shared_url, :url => shorten_url, :html => { :class => "wide_form", :id => "new_shared_url_form" } do |f| %>
	<%= errors_for(@shared_url, "Opps, unable to shorten your url").html_safe %>
	<%= f.text_field :full_url, :class => "wide_input", :placeholder => 'http://url.com' %>
	<%= hidden_field_tag :group_id, current_group.id if defined?(current_group)%>
	<%= f.submit 'shorten', :id => "shorten_form_submit" %>
	<span class="clearfix"></span>
	<% if current_user.is_admin? %>
		<p>you're an admin, so you can chose the short version too!</p>
		<%= f.text_field :short_url, :class => "wide_input", :placeholder => 'abcde' %>
	<% end %>
<% end %>