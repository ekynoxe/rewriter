<h1>Change your <span class="orange">email</span>...</h1>
<div id="box">
<%= form_for current_user, :url=> change_email_url do |f| %>
	<%= errors_for(current_user, "Opps, unable to change your email").html_safe %>
	<ul>
		<li>
			<%= f.label :email, 'Your email', :class=>'label' %>
			<%= f.text_field :email, :value => current_user.email, :class=>'input' %>
		</li>
		<li>
			<%= f.submit 'change' %>
		</li>
	</ul>
<% end %>
</div>